    "mongoose": "^8.1.2",
    "openmeteo": "^1.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0"
  },
  "devDependencies": {
    "@remix-run/dev": "2.7.1",
    "@types/bcryptjs": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
